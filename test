FROM php:8.2-fpm-alpine

# Installer les dépendances nécessaires
RUN apk --no-cache add \
        nginx \
        curl \
        unzip \
        libpng-dev \
        libjpeg-turbo-dev \
        libwebp-dev \
        freetype-dev \
        icu-dev \
        bash \
        shadow \
        mysql-client \
        && docker-php-ext-configure gd --with-freetype --with-jpeg --with-webp \
        && docker-php-ext-install gd pdo pdo_mysql intl opcache

# Télécharger et installer Matomo
RUN curl -sS https://builds.matomo.org/matomo-latest.zip -o matomo.zip \
    && unzip matomo.zip -d /var/www/html \
    && rm matomo.zip

# Définir les permissions
RUN chown -R www-data:www-data /var/www/html/matomo

WORKDIR /var/www/html/matomo

CMD ["php-fpm"]